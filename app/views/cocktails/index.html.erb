<header class="jumbotron">
  <div class="container">
    <hr/>
    <h4>All the cocktail recipes you could possibly need.</h4>
  </div>
</header>
<section id="section_intro">
  <div class="container">
    <div class="row">
      <div class="col-sm-5 img" data-0="transform: translateX(-200px)" data-500="transform: translateY(0px)"></div>
      <div class="col-sm-7" data-300="opacity: 0" data-500="opacity: 1">
        <h2>Popular Cocktails</h2>
        <hr/>
      </div>
    </div>
  </div>
</section>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="cocktails-show">
        <% if cocktail.photo.attached? %>
          <% background_url = cl_image_path cocktail.photo.key %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
        <% end %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
          <div class="card-description">
            <h2><%=truncate( cocktail.name, :length => 20) %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
